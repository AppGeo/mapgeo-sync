{{breadcrumb
  'Previous Runs'
  route='rule.runs'
  models=(array @model.syncRule.id)
}}

<div class='space-y-2'>
  <h2 class='font-semibold text-gray-700'>
    Previous Runs
  </h2>

  <div class='bg-white shadow-lg rounded-lg'>
    <Rule::Card
      @rule={{@model.syncRule}}
      @datasets={{@model.community.datasets}}
      @sources={{@model.sources}}
    />
  </div>

  <div class='mt-2 pb-3 bg-gray-700 text-white shadow-lg rounded-lg'>
    <h3 class='px-2 pt-1 text-sm font-semibold'>
      Logs
    </h3>

    <ul>
      {{#each this.state.logs as |logItem index|}}
        <li>
          <Rule::LogItem @item={{logItem}} @isOpen={{eq index 0}} />
        </li>
      {{/each}}
    </ul>
  </div>
</div>