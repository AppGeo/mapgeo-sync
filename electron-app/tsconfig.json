{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/**/*"],
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src/**/*"]
}
