{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/**/*"],
    "paths": {
      "mapgeo-sync-config": ["../types/mapgeo-sync-config/index.d.ts"],
      "*": ["types/*"]
    }
  },
  "include": ["src/**/*", "../types/mapgeo-sync-config/*", "types/**/*"]
}
