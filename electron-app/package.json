{
  "name": "mapgeo-sync",
  "productName": "mapgeo-sync",
  "version": "0.0.0",
  "description": "Small description for mapgeo-sync goes here",
  "main": "dist/index.js",
  "scripts": {
    "start": "electron-forge start",
    "predebug": "yarn build:ts",
    "debug": "electron-forge start --inspect-electron",
    "build:ts": "tsc",
    "postbuild:ts": "yarn generate:store-schema",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "test": "node dist/tests/auth.machine.test.js",
    "generate:store-schema": "yarn ts-json-schema-generator --path 'src/store.ts' --type 'SyncStoreType' --no-type-check -o src/store-schema.json"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "/ember-test(/|$)",
          "/tests(/|$)"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "mapgeo_sync"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "aws-sdk": "^2.914.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.0",
    "electron-window-state": "^5.0.3",
    "knex": "^0.95.6",
    "mssql": "^7.1.0",
    "node-fetch": "^2.6.1",
    "node-schedule": "^2.0.0",
    "oracledb": "^5.1.0",
    "pg": "^8.6.0",
    "xstate": "^4.19.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.57",
    "@electron-forge/maker-deb": "6.0.0-beta.57",
    "@electron-forge/maker-rpm": "6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "6.0.0-beta.57",
    "@electron-forge/maker-zip": "6.0.0-beta.57",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/node": "^12.19.13",
    "@types/node-fetch": "^2.5.10",
    "@types/node-schedule": "^1.3.1",
    "@types/tap": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "devtron": "^1.4.0",
    "electron": "13.1.6",
    "eslint": "^7.17.0",
    "eslint-plugin-import": "^2.22.1",
    "tap": "^15.0.9",
    "tap-spec": "^5.0.0",
    "ts-json-schema-generator": "^0.93.0",
    "typescript": "^4.3.2"
  },
  "volta": {
    "node": "12.22.1",
    "yarn": "1.22.5"
  }
}
